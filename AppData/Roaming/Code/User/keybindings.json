// Place your key bindings in this file to override the defaults
[

    // if bugfix, !!!!!!!!!! update https://www.reddit.com/r/whitespaceLisp/comments/mu5gms/an_ideal_keyboard_layout_for_programming/gv3udve/

    // uz jsem to pridal do git

    {
        "key": "f8",
          "command": "workbench.action.terminal.runSelectedText",
            "when": "editorTextFocus"
    },


    //{ "key": "y",           "command": "type", "args": { "text": "z" }, "when": "editorTextFocus" },
    // EDIT bugfix: the part "when": "editorTextFocus" is really needed, otherwise awful behavior in ctrl-f
    // ano "when": "editorTextFocus " jinak pokazi sor pri zadavani  hledani po ^f ... a v teminalu stejne doesn't work !!
    { "key": "3",           "command": "type", "args": { "text": "#" }, "when": "editorTextFocus" },
    { "key": "4",           "command": "type", "args": { "text": "$" }, "when": "editorTextFocus" },
    { "key": "9",           "command": "type", "args": { "text": "(" }, "when": "editorTextFocus" },
    { "key": "0",           "command": "type", "args": { "text": "_" }, "when": "editorTextFocus" },
    { "key": "]",           "command": "type", "args": { "text": "{" }, "when": "editorTextFocus" },
    { "key": ";",           "command": "type", "args": { "text": ":" }, "when": "editorTextFocus" },
    { "key": "\\",           "command": "type", "args": { "text": "\"" }, "when": "editorTextFocus" },

    { "key": "numpad_decimal",           "command": "type", "args": { "text": ";" }, "when": "editorTextFocus" },




]